<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="DEAL NAME"
        android:textColor="@color/traveloore_green_theme"
        android:textSize="18dp" />
    <View  android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="5dp"
          android:background="#00ff00"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"/>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:ems="10" >
        <requestFocus />
                
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="PRIORITY"
        android:textColor="@color/traveloore_green_theme"
        android:textSize="18dp" />
     <View  android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="5dp"
          android:background="#00ff00"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"/>

     <Spinner
         android:id="@+id/priority"
         android:layout_width="match_parent"
         android:layout_height="38dp"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:layout_marginTop="5dp"
         android:text="Choose Priority"/>
         
         
         />
       <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="ASSOCIATION"
        android:textColor="@color/traveloore_green_theme"
        android:textSize="18dp" />
    <View  android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="5dp"
          android:background="#00ff00"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"/>
     
       <Spinner
         android:id="@+id/listofcontacthere"
         android:layout_width="match_parent"
         android:layout_height="38dp"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:layout_marginTop="5dp"
         android:text="Choose Priority"/>
         
         
         />
     
      
        <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="VALUE"
        android:textColor="@color/traveloore_green_theme"
        android:textSize="18dp" />
       <View  android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="5dp"
          android:background="#00ff00"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"/>
     
     

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="number" />
    
      <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="REFERRAL"
        android:textColor="@color/traveloore_green_theme"
        android:textSize="18dp" />
    <View  android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="5dp"
          android:background="#00ff00"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"/>

     <Button
         android:id="@+id/referel"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:layout_marginTop="5dp"
         android:text="Refferal Source"
         android:background="#939e86"
         android:textColor="#ffffff"
         />
 
       
               <LinearLayout
                android:id="@+id/created_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#ffffff"
                android:orientation="vertical" >
             

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingTop="15dp"
                    android:text="CREATED ON"
                    android:visibility="gone"
                    android:textColor="@color/traveloore_green_theme" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:visibility="gone"
                    android:background="@color/traveloore_green_theme" />

                <EditText
                    android:id="@+id/et_created"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:ems="10"
                    android:visibility="gone"
                    android:hint="Date"
                    android:inputType="textPersonName" />
                   <EditText
                    android:id="@+id/et_createdtime"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:ems="10"
                    android:visibility="gone"
                    android:hint="Time"
                    android:inputType="textPersonName" />
            </LinearLayout>
       
        </LinearLayout>
    </ScrollView>
    
</LinearLayout>
